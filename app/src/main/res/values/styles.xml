<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/notosans_cjk_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ChangeDialogStyle" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:fontFamily">@font/notosans_cjk_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MySeekBar" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:maxHeight">2dp</item>
        <item name="android:thumb">@drawable/selector_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/selector_seekbar_progress</item>
    </style>
</resources>
