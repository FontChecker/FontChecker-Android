<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape android:shape="oval">

            <solid android:color="#ffffffff" />

            <size android:width="20dp" android:height="20dp" />

            <stroke android:width="5dp" android:color="#80ff8080" />

            <corners android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />
        </shape>
    </item>

    <item android:state_pressed="false">

        <shape android:shape="oval">

            <solid android:color="#ffffffff" />

            <size android:width="20dp" android:height="20dp" />

            <stroke android:width="5dp" android:color="#80808080" />

            <corners android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />
        </shape>
    </item>


</selector>